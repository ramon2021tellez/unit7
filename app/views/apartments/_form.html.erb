    <%= apartment_form.label :number %>
    <%= apartment_form.text_field :number %>
    <%= apartment_form.label :sale_price %>
    <%= apartment_form.text_field :sale_price %>
  <% end %>
  <div>
    <%= form.label :building_id, style: "display: block" %>
